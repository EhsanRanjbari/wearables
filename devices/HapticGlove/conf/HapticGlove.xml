<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">
<robot name="SenseGloveWearableDevice" build=0 portprefix="">
<!--Following the example in https://github.com/robotology/robots-configuration/blob/devel/experimentalSetups/battery/hardware/battery/icubbattery.xml-->

    <!--HapticGlove Device-->
    <device type="hapticGlove" name="HapticGloveWearableDevice">
        <param name="period">0.01</param>
        <param name="portsPrefixName">/wearable/HapticGlove/Left</param>
        <action phase="startup" level="5" type="attach">
            <paramlist name="networks">
                <elem name="HapticGloveWearableDeviceLabel">HapticGloveWearableDevice</elem>
            </paramlist>
        </action>
        <action phase="shutdown" level="5" type="detach"/>
    </device>

    <device type="iwear_wrapper" name="HapticGloveWearableDeviceWrapper">
        <param name="period">0.01</param>
        <param name="dataPortName">/HapticGlove/WearableData/data:o</param>
        <param name="rpcPortName">/HapticGlove/WearableData/metadataRpc:o</param>
        <action phase="startup" level="5" type="attach">
            <paramlist name="networks">
                <elem name="HapticGloveWearableDeviceWrapperLabel"> HapticGloveWearableDevice </elem>
            </paramlist>
        </action>
        <action phase="shutdown" level="4" type="detach"/>
    </device>

